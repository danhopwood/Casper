                <a href="{{@blog.url}}">Casey Travel Ltd</a> &copy; {{date format="YYYY"}}
                <a class="icon-twitter" href="{{twitter_url}}"></a>
                <a class="icon-facebook" href="{{facebook_url}}"></a>
            </section>
            <section class="poweredby">
                {{!-- Proudly published with <a href="https://ghost.org">Ghost</a> --}}
                <a href="https://caseytravel.com/contact-us/">Contact Us</a>
