{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header --}}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        {{#if @blog.navigation}}
            <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
        {{/if}}
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">The fastest way to book a unique and unforgettable trip</h1>
            <h2 class="page-description">Follow our journey</h2>
            <section class="section-subscribe-form">
                <form method="post" action="//caseytravel.us13.list-manage.com/subscribe/post?u=25865618789c4a52920d573ff&amp;id=d3893ec3f7" class="form-subscribe" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" novalidate>
                    <div class="form-group">
                        <input id="mce-EMAIL" class="subscribe-email" type="email" name="EMAIL" autofocus="true" placeholder="Type your email">
                    </div>
                    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                    <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_25865618789c4a52920d573ff_d3893ec3f7" tabindex="-1" value=""></div>
                    <button type="submit">Subscribe</button>
                </form>
            </section>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

{{!-- The main content area on the homepage --}}
<main id="content" class="content" role="main">

    {{!-- The tag below includes the post loop - partials/loop.hbs --}}
    {{> "loop"}}

</main>
